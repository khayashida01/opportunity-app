
<div class="container">
  <h3>Opportunity</h3>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading" style="font-weight:bold;">1. Opportunity Information</div>
      <div class="panel-body">
        <%= form_for(@opportunity, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group row">
            <div class="col-xs-2">
              <%= f.label :id, "Record#" %>
              <%= f.text_field :id, class: "form-control", :readonly => true %>
            </div>
            <div class="col-xs-3">
              <%= f.label :date_created, "Date" %>
              <%= f.text_field :date_created, class: "form-control" %>
            </div>
            <div class="col-xs-3">
              <%= f.label :employee_id, "Representative" %>
              <%= f.text_field :employee_id, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-xs-12">
              <%= f.label :opportunity_name, "Opportunity Name" %>
              <%= f.text_field :opportunity_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-xs-12">
              <%= f.label :opportunity_description, "Opportunity Description" %>
              <%= f.text_field :opportunity_description, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-xs-4">
              <%= f.label :lead_source_code, "Lead Source" %>
              <%= f.text_field :lead_source_code, class: "form-control" %>
            </div>
            <div class="col-xs-4">
              <%= f.label :expected_revenue_amount, "Expected Revenue Amount" %>
              <%= f.text_field :expected_revenue_amount, class: "form-control" %>
            </div>
            <div class="col-xs-4">
              <%= f.label :current_expected_revenue_amount, "Current Expected Revenue Amount" %>
              <%= f.text_field :current_expected_revenue_amount, class: "form-control" %>
            </div>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>