
<div class="container">
  <h3>Opportunity Inquiry</h3>
  <div class="row">
    <%= form_tag search_opportunities_path, method: :get, class: 'form-horizontal' do %>
      <div class="form-group">
        <div class="col-xs-8"><%= text_field_tag :opportunity_search_text, @opportunity_search_text, placeholder: "Search...", autofocus: true, class: "form-control" %></div>
        <div class="col-xs-2"><%= button_tag(type: :submit, class: "btn btn-sm btn-success") do %>Search<% end %></div>
      </div>
    <% end %>
  </div>

  <%= render 'opportunities/result' %>

</div>